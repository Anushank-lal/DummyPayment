<h1>You are making payment for order number: <%= session[:params][:order_no] %> & amount: <%= session[:params][:amount] %></h1>

<p><%= link_to "Yes", confirm_payment_path(status: true, order_no:  params[:order_no], payment_return_url: params[:payment_return_url]), method: :post %></p>

<p><%= link_to "Cancel", confirm_payment_path(status: false, order_no:  params[:order_no], payment_return_url: params[:payment_return_url]), method: :post %></p>

